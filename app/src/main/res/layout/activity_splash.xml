<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryVariant"
    tools:context=".activity.account.SplashActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo_white"
        android:layout_marginBottom="228dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/hands_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/anim_hand"
        app:layout_constraintBottom_toTopOf="@id/floor"
        app:layout_constraintLeft_toLeftOf="parent" />
    <ImageView
        android:id="@+id/run_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/run_anim"
        android:layout_marginRight="88dp"
        android:layout_marginBottom="-18dp"
        app:layout_constraintBottom_toTopOf="@id/floor"
        app:layout_constraintRight_toRightOf="parent" />
    <ImageView
        android:id="@+id/floor"
        android:layout_width="830dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_long_floor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>