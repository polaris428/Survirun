<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ExercisePreparationActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설명"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/explanation"/>

    <TextView
        android:id="@+id/explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/test"
        app:layout_constraintTop_toBottomOf="@id/tv"
        app:layout_constraintBottom_toTopOf="@id/sw_zombie"
        android:layout_marginHorizontal="20dp"/>

    <ImageButton
        android:id="@+id/btn_info_zombie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:src="@drawable/ic_information"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@id/sw_zombie"
        app:layout_constraintRight_toLeftOf="@id/sw_zombie"
        app:layout_constraintTop_toTopOf="@id/sw_zombie" />
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/sw_zombie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/sw_story"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/explanation"
        android:text="좀비모드"/>
    <ImageButton
        android:id="@+id/btn_info_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_information"
        android:background="@color/transparent"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/sw_story"
        app:layout_constraintBottom_toBottomOf="@id/sw_story"
        app:layout_constraintRight_toLeftOf="@id/sw_story"/>
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/sw_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/sw_zombie"
        app:layout_constraintTop_toTopOf="@id/sw_zombie"
        android:text="스토리모드"/>
    <ImageButton
        android:id="@+id/btn_info_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:src="@drawable/ic_information"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@id/sw_gps"
        app:layout_constraintRight_toLeftOf="@id/sw_gps"
        app:layout_constraintTop_toTopOf="@id/sw_gps" />
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/sw_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/sw_no"
        app:layout_constraintTop_toBottomOf="@id/sw_zombie"
        android:text="GPS"/>
    <ImageButton
        android:id="@+id/btn_info_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_information"
        android:background="@color/transparent"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/sw_no"
        app:layout_constraintBottom_toBottomOf="@id/sw_no"
        app:layout_constraintRight_toLeftOf="@id/sw_no"/>
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/sw_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/sw_gps"
        app:layout_constraintTop_toTopOf="@id/sw_gps"
        android:text="미정"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/exerciseStartButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="시작하기"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>