<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".NavHeader">

    <ImageView
        android:id="@+id/profile_imageview"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginVertical="45dp"
        android:layout_marginLeft="20dp"
        android:src="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="무엇"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="@id/profile_imageview"
        app:layout_constraintBottom_toTopOf="@id/id_text_view"
        app:layout_constraintLeft_toRightOf="@id/profile_imageview"/>

    <TextView
        android:id="@+id/id_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="test."
        app:layout_constraintTop_toBottomOf="@id/name_text_view"
        app:layout_constraintLeft_toLeftOf="@id/name_text_view"
        app:layout_constraintBottom_toBottomOf="@id/profile_imageview"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>