<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ExerciseResultActivity">

    <TextView
        android:id="@+id/temp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/end"
        android:textSize="30sp"
        android:layout_margin="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/temp_text"
        app:layout_constraintBottom_toTopOf="@id/go_main_button">

        <TextView
            android:id="@+id/end_calorie_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calorie"
            android:textSize="18sp"
            android:layout_margin="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/end_calorie"
            app:layout_constraintBottom_toTopOf="@id/end_time_text"/>

        <TextView
            android:id="@+id/end_calorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200 Kcal"
            android:textSize="18sp"
            android:layout_margin="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/end_calorie_text"
            app:layout_constraintBottom_toTopOf="@id/end_time"/>


        <TextView
            android:id="@+id/end_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise_time"
            android:textSize="18sp"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/end_calorie_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/end_time"
            app:layout_constraintBottom_toTopOf="@id/end_km_text"/>

        <TextView
            android:id="@+id/end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:01:11"
            android:textSize="18sp"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/end_calorie"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/end_time_text"
            app:layout_constraintBottom_toTopOf="@id/end_km"/>


        <TextView
            android:id="@+id/end_km_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KM"
            android:textSize="18sp"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/end_time_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/end_km"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/end_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.15km"
            android:textSize="18sp"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/end_time"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/end_km_text"
            app:layout_constraintBottom_toBottomOf="parent"/>






    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/go_main_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/next"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>