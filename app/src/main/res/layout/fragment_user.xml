<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragmnet.UserFragment">

    <TextView
        android:id="@+id/dayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/daily_target"
        android:textSize="20sp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_date"
        app:layout_constraintBottom_toTopOf="@id/dayTextView"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:layout_marginEnd="100dp"
        app:layout_constraintLeft_toRightOf="@id/dayTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/dayTextView"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/calorieCardView"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginHorizontal="30dp"
        app:cardCornerRadius="30dp"
        android:layout_gravity="center"
        app:cardElevation="100dp"
        app:layout_constraintTop_toBottomOf="@id/dayTextView"
        app:layout_constraintBottom_toTopOf="@id/exerciseTimeCardView">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calorie"
            android:textSize="22sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:backgroundTint="#E4E4E4"
            android:background="@drawable/circle"
            android:layout_marginTop="50dp">
            <TextView
                android:id="@+id/comparisonCalorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yesterday"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tv_eveCalorie"/>
            <TextView
                android:id="@+id/tv_eveCalorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/comparisonCalorie"
                android:layout_marginStart="5dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/calorieTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="right|center_vertical" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/exerciseTimeCardView"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="100dp"
        app:layout_constraintBottom_toTopOf="@id/kmCardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calorieCardView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="@string/exercise_time"

            android:textSize="22sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="#E4E4E4"
            android:background="@drawable/circle">

            <TextView
                android:id="@+id/comparisonExerciseTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/yesterday"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_eveTime"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_eveTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/comparisonExerciseTime"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="20dp"
            android:textSize="22sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/kmCardView"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginHorizontal="30dp"
            app:cardCornerRadius="30dp"
            android:layout_gravity="center"
            app:cardElevation="100dp"
            app:layout_constraintTop_toBottomOf="@id/exerciseTimeCardView"
            app:layout_constraintBottom_toTopOf="@id/arcProgress">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Km"
                android:textSize="22sp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:backgroundTint="#E4E4E4"
                android:background="@drawable/circle"
                android:layout_marginTop="50dp">
                <TextView
                    android:id="@+id/comparisonKm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yesterday"
                    android:layout_marginStart="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/tv_eveKm"/>
                <TextView
                    android:id="@+id/tv_eveKm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/comparisonKm"
                    android:layout_marginLeft="5dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/kmTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="right|center_vertical"/>
    </androidx.cardview.widget.CardView>

    <com.github.lzyzsd.circleprogress.ArcProgress
            android:id="@+id/arcProgress"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            app:arc_text_color="#EA0000"
            app:arc_finished_color="#EA0000"
            app:arc_unfinished_color="#000000"
            app:arc_bottom_text="@string/goal"
            app:arc_bottom_text_size="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/kmCardView"
            app:layout_constraintBottom_toTopOf="@id/btn_goal"/>

            <Button
                android:id="@+id/btn_goal"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/my_goal"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/arcProgress"/>

</androidx.constraintlayout.widget.ConstraintLayout>