<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragmnet.UserFragment">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/daily_target"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_date"
        app:layout_constraintBottom_toTopOf="@id/tv1"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginRight="100dp"
        app:layout_constraintLeft_toRightOf="@id/tv1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv1"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginHorizontal="30dp"
        app:cardCornerRadius="30dp"
        android:layout_gravity="center"
        app:cardElevation="100dp"
        android:backgroundTint="#595959"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        app:layout_constraintBottom_toTopOf="@id/view2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/calorie"
            android:textSize="22sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:background="@drawable/circle"
            android:layout_marginTop="50dp">
            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yesterday"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tv_eveCalorie"/>
            <TextView
                android:id="@+id/tv_eveCalorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-100kcal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_1"
                android:layout_marginLeft="5dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/tv_calorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="412kcal"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:layout_gravity="right|center_vertical"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="#595959"
        app:cardCornerRadius="30dp"
        app:cardElevation="100dp"
        app:layout_constraintBottom_toTopOf="@id/view3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="@string/exercise_time"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/circle">

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/yesterday"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_eveTime"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_eveTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="-20m"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_2"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="20dp"
            android:text="1h 22m"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginHorizontal="30dp"
            app:cardCornerRadius="30dp"
            android:layout_gravity="center"
            app:cardElevation="100dp"
            android:backgroundTint="#595959"
            app:layout_constraintTop_toBottomOf="@id/view2"
            app:layout_constraintBottom_toTopOf="@id/arc_progress">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Km"
                android:textSize="22sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:background="@drawable/circle"
                android:layout_marginTop="50dp">
                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yesterday"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/tv_eveKm"/>
                <TextView
                    android:id="@+id/tv_eveKm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-2.3km"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_3"
                    android:layout_marginLeft="5dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/tv_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8.22km"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:layout_marginRight="20dp"
                android:layout_gravity="right|center_vertical"/>
    </androidx.cardview.widget.CardView>

    <com.github.lzyzsd.circleprogress.ArcProgress
            android:id="@+id/arc_progress"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            app:arc_text_color="#EA0000"
            app:arc_finished_color="#EA0000"
            app:arc_unfinished_color="#000000"
            app:arc_bottom_text="@string/goal"
            app:arc_bottom_text_size="15sp"
            app:arc_progress="12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view3"
            app:layout_constraintBottom_toTopOf="@id/btn_goal"/>

            <Button
                android:id="@+id/btn_goal"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/my_goal"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/arc_progress"/>

</androidx.constraintlayout.widget.ConstraintLayout>